<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android"
  id="com.phonegap.PrintPlugin"
  version="0.1.0">
  <name>PrintPlugin</name>
  <description>Cordova Print Plugin</description>
  <license>Apache 2.0</license>
  <keywords>cordova,PrintPlugin</keywords>


  <js-module src="www/PrintPlugin.js" name="PrintPlugin">
    <clobbers target="window.PrintPlugin" />
  </js-module>

  <!-- android -->
  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="PrintPlugin">
        <param name="android-package" value="com.phonegap.PrintPlugin.PrintPlugin"/>
      </feature>
    </config-file>
    <config-file target="AndroidManifest.xml" parent="/*">
      <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
      <uses-permission android:name="android.permission.INTERNET" />
    </config-file>

    <config-file target="AndroidManifest.xml" parent="/manifest/application">
      <activity android:label="@string/title_activity_print_dialog" android:name="com.phonegap.PrintPlugin.PrintDialogActivity">
      </activity>
    </config-file>

    <config-file target="res/values/strings.xml" parent="/resources">
      <string name="title_activity_print_dialog">PrintDialogActivity</string>
    </config-file>


    <source-file src="src/android/PrintPlugin.java" target-dir="src/com/phonegap/PrintPlugin/" />
    <source-file src="src/android/PrintDialogActivity.java" target-dir="src/com/phonegap/PrintPlugin/" />
    <source-file src="src/android/print_dialog.xml" target-dir="res/layout/" />
  </platform>

  <!-- ios -->
  <platform name="ios">
   <config-file target="config.xml" parent="/*">
     <feature name="PrintPlugin">
       <param name="ios-package" value="PrintPlugin" />
     </feature>
   </config-file>

   <header-file src="src/ios/PrintPlugin.h" />
   <source-file src="src/ios/PrintPlugin.m" />
 </platform>

</plugin>